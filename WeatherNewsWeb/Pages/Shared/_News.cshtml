@model List<WeatherNewsWeb.Models.NewsModel>

<!-- 
    Componente parcial para mostrar una lista de noticias destacadas.
    Modelo esperado: List<WeatherNewsWeb.Models.NewsModel>
    Cada noticia incluye título, descripción, imagen y un enlace al artículo completo.
-->

<h4 class="mt-4 mb-3">Noticias destacadas</h4>

<div class="row row-cols-1 row-cols-md-2 g-4">
    <!-- 
        Itera sobre el modelo (lista de noticias) y genera una tarjeta para cada noticia.
        Cada tarjeta incluye:
        - Imagen destacada de la noticia.
        - Título de la noticia.
        - Descripción breve.
        - Botón para leer más que redirige al enlace de la noticia.
    -->
    @foreach (var news in Model)
    {
        <div class="card h-100 shadow-sm border-0 transition-hover">
            <img class="card-img-top" src="@news.UrlToImage" alt="Imagen noticia">
            
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@news.Title</h5>
                <p class="card-text text-muted">@news.Description</p>
                <a href="@news.Url" target="_blank" class="btn btn-primary mt-auto">Leer más</a>
            </div>
        </div>
    }
</div>
